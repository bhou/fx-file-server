<html>
<head>
  <!--Import materialize.css-->
  <link type="text/css" rel="stylesheet" href="<%= root %>/materialize/css/materialize.min.css"
        media="screen,projection"/>

  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

  <link type="text/css" rel="stylesheet" href="<%= root %>/fx-file-server/css/custom.css"/>

  <link type="text/css" rel="stylesheet" href="<%= root %>/fx-file-server/font/FugazOne-Regular.woff"/>

  <link rel="shortcut icon" type="image/png" href="<%= root %>/fx-file-server/images/wavelet-36.png"/>

  <script src="<%= root %>/fx-file-server/js/marked.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.16/angular.min.js"></script>
  <script type="text/javascript" src="<%= root %>/fx-file-server/js/fileInfoModule.js"></script>

  <!--Let browser know website is optimized for mobile-->
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"/>

  <script>
    var webRoot = '<%- _root%>';
    var id = '<%-id%>';
  </script>
</head>


<body>
<header>
  <nav class="grey darken-4">
    <div class="nav-wrapper">
      <a href="<%=root%>/"><img id="nav-logo" alt="Wavelet" src="<%= root %>/fx-file-server/images/wavelet-48.png"></a>
      <a href="<%=root%>/" class="brand-logo logo-font grey-text">
        Wavelet
      </a>
    </div>
  </nav>
</header>

<main ng-app="fileInfoModule" ng-controller="fileInfoCtrl">
  <div class="page-title teal lighten-1">
    <div class="nav-wrapper center">
      <b>{{file.originalname}}</b>
    </div>
  </div>

  <div class="container">

    <div class="row">
      &nbsp;
    </div>

    <div class="row">
      <div class="col m12 l8">
        <div class="section">
          <h3>Description</h3>

          <p ng-bind-html="description"></p>
        </div>
        <div class="section">
          <h3>Tags</h3>

          <p>
            <span ng-repeat="tag in file.tags" class="white-text teal darken-1 tag" style="font-size:1.3rem;">{{tag}}&nbsp;</span>
          </p>
        </div>
      </div>

      <div class="col m12 l4">
        <div class="section">
          <h3>Basic Information</h3>

          <p>Original Name: {{file.originalname}}</p>

          <p>Local Name: {{file.name}}</p>

          <p>Extension: {{file.extension}}</p>

          <p>Path: <a href="<%= root %>{{file.path}}" target="_blank">{{file.path}}</a></p>

          <p>Encoding: {{file.encoding}}</p>

          <p>Size: {{file.size/1000}}K</p>
        </div>
      </div>
    </div>
  </div>
</main>

<footer class="page-footer grey darken-2">
  <div class="container ">
    <div class="row">
      <div class="col l6 s12">
        <h5 class="white-text">Wavelet</h5>

        <p class="grey-text text-lighten-4">CODE Name: <b class="teal-text text-lighten-2">fx-wavelet</b> based
          on <a class="teal-text text-lighten-2" href="http://nodered.org">IBM Node-RED</a></p>

        <p class="grey-text text-lighten-4">A powerful framework to develop your backend application with less
          coding.</p>
      </div>
    </div>
  </div>
  <div class="footer-copyright  grey darken-3">
    <div class="container">
      Â© 2015 Copyright Wavelet
      <a class="grey-text text-lighten-4 right" href="#!">Privacy &amp; Cookies Policy</a>
    </div>
  </div>
</footer>

<!--Import jQuery before materialize.js-->
<script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>

<script type="text/javascript" src="<%= root %>/materialize/js/materialize.min.js"></script>

<script type="text/javascript" src="<%= root %>/fx-file-server/js/init.js"></script>

</body>
</html>